generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  cpf          String    @unique
  email        String    @unique
  password     String
  dateOfBirth  DateTime? // vocÃª pode usar isso se quiser adicionar depois
  profileImage String? // URL da foto de perfil (Cloudinary, por exemplo)

  appointments Appointment[]
  moods        Mood[]
}

model Appointment {
  id            Int      @id @default(autoincrement())
  userId        Int
  dateTime      DateTime
  googleEventId String
  paid          Boolean  @default(false)

  user User @relation(fields: [userId], references: [id])
}

model Mood {
  id        Int      @id @default(autoincrement())
  userId    Int
  moodEmoji String?
  moodText  String?
  date      DateTime

  user User @relation(fields: [userId], references: [id])
}
